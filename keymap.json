[
  {
    "context": "Editor",
    "bindings": {
      "alt-shift-f": "editor::Format"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-y": "editor::Redo"
    }
  },
  {
    "context": "AgentPanel",
    "bindings": {
      "cmd-g": "agent::AllowOnce"
    }
  },
  {
    "context": "(Editor && editor_agent_diff)",
    "bindings": {
      "cmd-g": "agent::Keep"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-r": [
        "projects::OpenRecent",
        {
          "create_new_window": true
        }
      ]
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd--": "editor::SelectLine"
    }
  },
  {
    "context": "AgentPanel",
    "bindings": {
      "cmd-l": "agent::AddSelectionToThread"
    }
  },
  {
    "context": "(Editor && mode == full)",
    "bindings": {
      "cmd-l": "agent::AddSelectionToThread"
    }
  }
]
